{% apply spaceless %}
  {# #########################################################################################
    ###Pagination (numbers)
    
    @param stylesNumber             :: {string}    (optional)   (default: below)
    @param stylesNumberCurrent      :: {string}    (optional)   (default: below)
    @param stylesNumberBullet       :: {string}    (optional)   (default: below)
    @param stylesNumberBox          :: {string}    (optional)   (default: below)
    @param iconClass                :: {string}    (optional)   (default: below)
    @param getNextUrls              :: {integer}   (optional)   (default: 4)

    #USAGE:
    {% include
      '_includes/components/Pagination' with {
      
      }
    %}
    
  ########################################################################################## #}

{# Parameters #}
{% set stylesNumber           = stylesNumber|default('bg-blue-500 text-white hover:bg-teal-500 hover:text-white') %}
{% set stylesNumberCurrent    = stylesNumberCurrent|default('bg-teal-500 text-white w-7 h-7 block flex flex-col justify-center items-center') %}
{% set stylesNumberBullet     = stylesNumberBullet|default('mr-2 text-sm' %}
{% set stylesNumberBox        = stylesNumberBox|default('w-7 h-7 block flex flex-col justify-center items-center' %}
{% set iconClass              = iconClass|default('w-3 h-3 flex-shrink-0 fill-current') %}
{% set getNextUrls            = getNextUrls|default(4) %}


{% if pageInfo.totalPages > 1 %}
  <nav class="mx-auto max-w-4xl // text-center">
    <ul class="list-reset flex items-center justify-center mb-2">
      {% for page, url in pageInfo.getPrevUrls(4) %}
        <li class="{{ stylesNumberBullet }}">
          <a href="{{ url }}" class="{{ stylesNumberBox ~ stylesNumber }}">
            {{ page }}
          </a>
        </li>
      {% endfor %}
      
      <li class="{{ stylesNumberBullet ~ ' ' ~ stylesNumberBox ~ ' ' ~ stylesNumberCurrent }}">{{ pageInfo.currentPage }}</li>
      
      {% for page, url in pageInfo.getNextUrls(4) %}
        <li class="{{ stylesNumberBullet }}">
          <a href="{{ url }}" class="{{ stylesNumberBox ~ stylesNumber }}">
            {{ page }}
          </a>
        </li>
      {% endfor %}
    </ul>
    
    <p class="text-14 pt-2 flex items-center justify-between max-w-sm mx-auto">
      <a href="{{ pageInfo.firstUrl }}" class="flex items-center">
        {{ svg('@icons/arrow-thin-left.svg', class= iconClass ~ " mr-2") }}
        First Page
      </a>
      <span class="mx-2">Page {{ pageInfo.currentPage }} of {{ totalPages|default(pageInfo.totalPages) }}</span>
      <a href="{{ pageInfo.lastUrl }}" class="flex items-center">
        Last Page
        {{ svg('@icons/arrow-thin-right.svg', class=iconClass ~ " ml-2") }}
      </a>
    </p>
  </nav>
{% endif %}