{# STANDRD SELECT FIELD #}
<div class="mb-4">
  {% include '_includes/_freeform/_default/_partials/_label-with-note.twig' %}
  
  <div class="mt-1 relative rounded-md shadow-sm">
    <select name="{{ field.handle }}" id="{{ field.idAttribute }}" class="{{ fieldClass }} {{ form.customAttributes.inputClass }} {{ (field.hasErrors ? "pr-20") }}">
      <option value="">Please choose a {{ field.label|lower }}</option>
      {% for option in field.options %}
        <option value="{{ option.value }}"{{ option.checked ? "selected" : "" }}>{{ option.label|t|raw }}</option>
      {% endfor %}
    </select>
    
    {% if field.hasErrors %}
      <div class="absolute inset-y-0 right-0 mr-9 flex items-center pointer-events-none">
        <svg class="h-5 w-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd"
                d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z"
                clip-rule="evenodd"
          />
        </svg>
      </div>
    {% endif %}
  </div>
  {% include '_includes/_freeform/_default/_partials/_error.twig' %}
  {% include '_includes/_freeform/_default/_partials/_instructions.twig' %}
</div>
