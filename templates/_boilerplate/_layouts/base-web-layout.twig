{# -- Base web layout template that all web requests inherit from -- #}
{#
┌─────────────────────────────────────────────────────────────────────────────┐
│ ┌─────────────────────────────────────────────────────────────────────────┐ │
│ │                                 htmlTag                                 │ │
│ └─────────────────────────────────────────────────────────────────────────┘ │
│ ┌─────────────────────────────────────────────────────────────────────────┐ │
│ │                                 headTag                                 │ │
│ └─────────────────────────────────────────────────────────────────────────┘ │
│ ┌─────────────────────────────────────────────────────────────────────────┐ │
│ │                                                                         │ │
│ │                                                                         │ │
│ │                                                                         │ │
│ │                               headContent                               │ │
│ └─────────────────────────────────────────────────────────────────────────┘ │
│ ┌─────────────────────────────────────────────────────────────────────────┐ │
│ │                                 bodyTag                                 │ │
│ └─────────────────────────────────────────────────────────────────────────┘ │
│ ┌─────────────────────────────────────────────────────────────────────────┐ │
│ │                                                                         │ │
│ │                                                                         │ │
│ │                                                                         │ │
│ │                               bodyContent                               │ │
│ └─────────────────────────────────────────────────────────────────────────┘ │
│                                                                             │
│                                  htmlPage                                   │
└─────────────────────────────────────────────────────────────────────────────┘
#}
{% extends "_layouts/global-variables.twig" %}

{%- block htmlPage -%}
  {% minify %}
  <!DOCTYPE html>
    {% block htmlTag %}
      <html lang="{{ craft.app.language |slice(0,2) }}" class="no-js">
    {% endblock htmlTag %}
    {% block headTag %}
  <head>
    {% endblock headTag %}
    {% include "_boilerplate/_partials/head-meta.twig" %}
    {# -- Page content that should be included in the <head> -- #}
    {% block headContent %}
    {% endblock headContent %}
  </head>
    
    {% block bodyTag %}
  <body>
    {% endblock bodyTag %}
    
    {# - IE notice for Old browsers - #}
    {% include '_includes/_globals/outdated-browser-notice.twig' %}
    
    {# -- Page content that should be included in the <body> -- #}
    {% block bodyContent %}
    {% endblock bodyContent %}
    
    {{ endBody() }}
  </body>
    </html>
  {% endminify %}
{%- endblock htmlPage -%}
